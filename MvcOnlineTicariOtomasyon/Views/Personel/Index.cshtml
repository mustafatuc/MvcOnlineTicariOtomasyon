@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">


    <th>ID</th>
    <th>Personel Adı</th>
    <th>Personel Soyad</th>
    <th>Görsel</th>
    <th>Departman</th>
    
    <th>Güncelle</th>
    <th>Satışlar</th>
    @foreach (var k in Model)
    {


        <tr>

            <td>@k.Personelid</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>@k.PersonelGorsel</td>
            <td>@k.Departman.DepartmanAd</td>
         
            <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-success"> Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-success" style="background-color:fuchsia">Satışlar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>


